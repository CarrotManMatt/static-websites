{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignAutomerge": true,
    "configMigration": true,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "dependencyDashboardLabels": [
        "dependencies",
        "tracker"
    ],
    "enabled": true,
    "enabledManagers": [
        "github-actions",
        "pep621",
        "pre-commit",
        "pep723"
    ],
    "extends": [
        "replacements:all",
        "workarounds:all"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "groupName": "pep621",
            "matchManagers": [
                "pep621"
            ]
        },
        {
            "groupName": "github-actions",
            "matchDatasources": [
                "github-tags"
            ],
            "matchManagers": [
                "github-actions"
            ]
        },
        {
            "groupName": "github-runners",
            "matchDatasources": [
                "github-runners"
            ],
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "pep621": {
        "fileMatch": [
            "^\\.build_and_deploy/pyproject\\.toml$"
        ]
    },
    "prHourlyLimit": 5,
    "pre-commit": {
        "enabled": true
    }
}
