{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignAutomerge": true,
    "configMigration": true,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": false,
    "dependencyDashboardLabels": [
        "dependencies",
        "tracker"
    ],
    "enabled": true,
    "enabledManagers": [
        "github-actions",
        "pep621",
        "pre-commit",
        "pep723"
    ],
    "extends": [
        "replacements:all",
        "workarounds:all"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "pep621": {
        "fileMatch": [
            "^\\.build_and_deploy/pyproject\\.toml$"
        ]
    },
    "prHourlyLimit": 5,
    "pre-commit": {
        "enabled": true
    }
}
